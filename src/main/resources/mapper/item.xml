<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.my.shop.item.ItemRepository">

    <insert id="insertItem" parameterType="com.my.shop.item.dto.ItemDto">
        INSERT INTO items
            (item_name, price1, price2, price3)
        VALUES
            (#{itemName}, #{price1}, #{price2}, #{price3})
    </insert>


    <select id="selectItemByName" parameterType="com.my.shop.item.dto.ItemDto">
        SELECT
            *
        fROM
            items
        WHERE
            item_name like CONCAT('%',#{itemName},'%')

    </select>

</mapper>